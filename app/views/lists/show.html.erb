<div class="border p-5">

  <div class="d-flex justify-content-between">
    <h1><%= @list.name.capitalize %></h1>
    <%= link_to "Back", lists_path, class: "align-baseline btn btn-secondary rounded-pill mb-3" %>
  </div>

  <div class="d-flex justify-content-center align-items-center">
    <%= link_to "Bookmark movie", new_list_bookmark_path(@list), class: "flex-fill align-baseline btn btn-primary rounded-pill m-3 mt-5" %>
  </div>

  <div class="row mt-5">
    <% if @list.bookmarks.count.positive? %>
      <% @list.bookmarks.each do |bookmark| %>
          <div class="col-sm-3">
            <div class="card my-3" style="width: 18rem;">
              <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="poster">
                <div class="card-body">
                  <h5 class="card-title"><%= bookmark.movie.title %></h5>
                  <p class="card-text"><%= bookmark.movie.overview %></p>
                  <%= link_to "Delete bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
                </div>
            </div>
          </div>
      <% end %>
    <% else %>
      <h1 class="text-center">No bookmarks!</h1>
    <% end %>
  </div>
  <div class="d-flex justify-content-center align-items-center">
    <%= link_to "Back to top", "#", class: "flex-fill align-baseline btn btn-info rounded-pill m-3 mt-5" %>
  </div>
  <div class="d-flex justify-content-center align-items-center">
    <%= link_to "Delete list", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "align-baseline btn btn-warning rounded-pill m-3 mt-5" %>
  </div>
</div>

<div class="border p-5">

  <div class="d-flex justify-content-between">
    <h1><%= @list.name.capitalize %></h1>
    <%= link_to "Back", lists_path, class: "align-baseline btn btn-secondary rounded-pill mb-3" %>
  </div>

  <div class="d-flex justify-content-center align-items-center">
    <%= link_to "New movie", new_list_bookmark_path(@list), class: "flex-fill align-baseline btn btn-primary rounded-pill m-3 mt-5" %>
  </div>

  <div class="row mt-5">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="col-sm-6">
      <div class="card" style="width: 18rem;">
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="poster">
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
          </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
